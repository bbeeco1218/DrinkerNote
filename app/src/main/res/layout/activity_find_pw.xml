<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPW">

    <ImageView
        android:id="@+id/LOGO2"
        android:layout_width="221dp"
        android:layout_height="159dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo"

        />

    <EditText
        android:id="@+id/et_Find_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/et_Find_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Find_ID"
        app:layout_constraintTop_toBottomOf="@+id/et_Find_ID" />

    <Button
        android:id="@+id/btn_find_sendmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="40dp"
        android:text="인증번호 전송"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toEndOf="@+id/et_Find_Email"
        app:layout_constraintTop_toBottomOf="@+id/LOGO2" />

    <EditText
        android:id="@+id/et_Find_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LOGO2" />

    <EditText
        android:id="@+id/et_Find_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="인증번호"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/et_Find_Email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Find_Email"
        app:layout_constraintTop_toBottomOf="@+id/et_Find_Email" />

    <Button
        android:id="@+id/btn_find_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="인증하기"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_find_sendmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_find_sendmail"
        app:layout_constraintTop_toBottomOf="@+id/btn_find_sendmail" />

    <TextView
        android:id="@+id/tv_find_codetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"

        app:layout_constraintBottom_toTopOf="@+id/btn_find_config"
        app:layout_constraintEnd_toEndOf="@+id/btn_find_config"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_find_config" />

    <TextView
        android:id="@+id/tv_find_idcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/et_Find_ID"
        app:layout_constraintEnd_toEndOf="@+id/et_Find_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Find_ID" />

    <TextView
        android:id="@+id/tv_findID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디를 잊으셨나요?"
        app:layout_constraintEnd_toEndOf="@+id/et_Find_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Find_ID"
        app:layout_constraintTop_toBottomOf="@+id/et_Find_ID" />

    <TextView
        android:id="@+id/tv_find_emailcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/et_Find_Email"
        app:layout_constraintEnd_toEndOf="@+id/et_Find_Email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Find_Email" />


</androidx.constraintlayout.widget.ConstraintLayout>