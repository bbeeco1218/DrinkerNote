<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_news_profileimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/myprofile"
        app:civ_border_color="#000000"
        app:civ_border_overlay="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_news_contents"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="뉴스 내용"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_news_profileimg"
        app:layout_constraintStart_toEndOf="@+id/iv_news_profileimg"
        app:layout_constraintTop_toTopOf="@+id/iv_news_profileimg" />

    <TextView
        android:id="@+id/tv_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보낸날짜"
        app:layout_constraintBottom_toBottomOf="@+id/iv_news_profileimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/iv_news_profileimg"
        app:layout_constraintTop_toTopOf="@+id/iv_news_profileimg" />

    <ImageView
        android:id="@+id/iv_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_newsimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_news_profileimg"
        app:layout_constraintStart_toEndOf="@+id/tv_news_contents"
        app:layout_constraintTop_toTopOf="@+id/iv_news_profileimg"
        app:srcCompat="@drawable/logo" />


    <Button
        android:id="@+id/btn_follow"
        android:layout_width="71dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#0172A5"
        android:visibility="gone"
        android:text="팔로우"
        app:layout_constraintBottom_toBottomOf="@+id/iv_news_profileimg"
        app:layout_constraintStart_toEndOf="@+id/tv_news_contents"
        app:layout_constraintTop_toTopOf="@+id/iv_news_profileimg" />

    <Button
        android:id="@+id/btn_follow_c"
        android:layout_width="71dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:text="팔로잉"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_news_profileimg"
        app:layout_constraintStart_toEndOf="@+id/tv_news_contents"
        app:layout_constraintTop_toTopOf="@+id/iv_news_profileimg" />
</androidx.constraintlayout.widget.ConstraintLayout>