<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Join_IDPW">

    <TextView
        android:id="@+id/tv_PWcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="비밀번호를 입력해주세요.\n (최소 8자, 하나이상의 문자,숫자,특수문자)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_CheckID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Join_ID"
        app:layout_constraintTop_toBottomOf="@+id/LOGO"
        app:layout_constraintVertical_bias="0.281" />

    <ImageView
        android:id="@+id/LOGO"
        android:layout_width="221dp"
        android:layout_height="159dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo"

        />

    <EditText
        android:id="@+id/et_Join_ID"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LOGO"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_Join_PW"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_CheckID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Join_ID"
        app:layout_constraintTop_toBottomOf="@+id/et_Join_ID"
        app:layout_constraintVertical_bias="0.149" />

    <EditText
        android:id="@+id/et_Join_PW_check"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_Join_PW"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Join_PW"
        app:layout_constraintTop_toBottomOf="@+id/et_Join_PW"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/btn_CheckID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:text="중복확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_Join_ID"
        app:layout_constraintTop_toBottomOf="@+id/LOGO"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_IDcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="가입하실 ID를 입력해주세요.\n(영문 4자 이상,10자 이하,특수문자 가능)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_CheckID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Join_ID"
        app:layout_constraintTop_toBottomOf="@+id/LOGO"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="다음"
        app:layout_constraintEnd_toEndOf="@+id/btn_CheckID"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="@+id/et_Join_ID"
        app:layout_constraintTop_toBottomOf="@+id/et_Join_PW_check" />

</androidx.constraintlayout.widget.ConstraintLayout>