<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertPW">

    <ImageView
        android:id="@+id/LOGO5"
        android:layout_width="221dp"
        android:layout_height="159dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo"

        />

    <TextView
        android:id="@+id/tv_helloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/LOGO5"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/LOGO5"
        app:layout_constraintTop_toBottomOf="@+id/LOGO5" />

    <EditText
        android:id="@+id/et_insertPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/LOGO5"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/LOGO5"
        app:layout_constraintTop_toBottomOf="@+id/tv_helloUser" />

    <EditText
        android:id="@+id/et_InsertPW_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/et_insertPW"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_insertPW"
        app:layout_constraintTop_toBottomOf="@+id/et_insertPW" />

    <TextView
        android:id="@+id/tv_insertPW_pwtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력해주세요.\n (최소 8자, 하나이상의 문자,숫자,특수문자)"
        app:layout_constraintBottom_toTopOf="@+id/et_insertPW"
        app:layout_constraintEnd_toEndOf="@+id/et_insertPW"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_insertPW" />

    <Button
        android:id="@+id/btn_changePW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="비밀번호 변경"
        app:layout_constraintEnd_toEndOf="@+id/et_InsertPW_check"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_InsertPW_check"
        app:layout_constraintTop_toBottomOf="@+id/et_InsertPW_check" />
</androidx.constraintlayout.widget.ConstraintLayout>